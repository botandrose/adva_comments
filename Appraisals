appraise 'rails-7.2' do
  gem 'rails', '~> 7.2.0'
  gem 'sqlite3', '~> 1.7'
end

appraise 'rails-8.0' do
  # Target Rails 8.0 line; adjust if using prereleases
  gem 'rails', '~> 8.0.0'
  # Rails 8 requires sqlite3 >= 2.1
  gem 'sqlite3', '~> 2.1'
  # rspec-rails 7.x is the Rails 8 compatible line
  gem 'rspec-rails', '~> 7.0'
end
